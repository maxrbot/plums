# Marketing Site Environment Variables
# Copy this file to .env.local and fill in your values

# Backend API URL (for authentication)
# Local: http://localhost:3001
# Production: https://api.acrelist.ag
NEXT_PUBLIC_API_URL=http://localhost:3001

# Platform URL (where to redirect after login)
# Local: http://localhost:3000
# Production: https://app.acrelist.ag
NEXT_PUBLIC_PLATFORM_URL=http://localhost:3000

# Supabase (for waitlist storage)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

